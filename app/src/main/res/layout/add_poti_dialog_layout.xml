<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="10dp"
    android:background="#fff">

    <TextView
        android:id="@+id/potiNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter name of potentiometer:"
        android:textColor="#000"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/potiNameEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Text..."
        android:textColorHint="#64686e"
        android:maxLength="8"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/minTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min:"
            android:textColor="#000"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/minEditText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Int..."
            android:textColorHint="#64686e"
            android:maxLength="20"
            android:inputType="number"/>

        <TextView
            android:id="@+id/maxTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max:"
            android:textColor="#000"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/maxEditText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Int..."
            android:textColorHint="#64686e"
            android:maxLength="20"
            android:inputType="number"/>

    </LinearLayout>

    <Button
        android:id="@+id/addBtnAddPoti"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Add"/>

</LinearLayout>